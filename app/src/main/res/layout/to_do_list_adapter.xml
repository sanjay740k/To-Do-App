<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/deleteButoon"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/deleteButoon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textViewShortDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewDater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShortDesc"
            android:layout_alignParentLeft="true"
            android:text="1/1/2021"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="date"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewDater"
            android:layout_below="@+id/textViewShortDesc"
            android:layout_centerInParent="true"
            android:text="6:00 AM"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textViewCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShortDesc"
            android:layout_toLeftOf="@+id/textViewCurrentTime"
            android:text="1/1/2021"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="date"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textViewCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShortDesc"
            android:layout_alignParentRight="true"
            android:text="6:00 AM"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="time"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>